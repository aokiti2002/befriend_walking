<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A0D8EF" >

    <ImageView
        android:id="@+id/logo_2"
        app:srcCompat="@drawable/logo_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/input1_txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="75dp"
        android:text="ニックネームを入力してください"
        android:textColor="#2b2b2b"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo_2" />

    <TextView
        android:id="@+id/input1_txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(6文字以内)"
        android:textColor="#2b2b2b"
        android:textSize="20dp"
        app:autoSizeMaxTextSize="100sp"
        app:autoSizeMinTextSize="8sp"
        app:autoSizeTextType="uniform"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/input1_txt1" />

    <EditText
        android:id="@+id/input1_edit1"
        android:layout_width="275dp"
        android:layout_height="50dp"
        android:maxLength="6"
        android:inputType="text"
        android:background="@drawable/edit_style"
        android:hint="タップして入力"
        android:textSize="25dp"
        android:gravity="center"
        android:layout_marginTop="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/input1_txt2" />

    <TextView
        android:id="@+id/input1_txt3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="あなたのパスワードです"
        android:textColor="#2b2b2b"
        android:textSize="20dp"
        android:layout_marginTop="75dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/input1_edit1" />

    <TextView
        android:id="@+id/input1_txt4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(必ず覚えてください)"
        android:textColor="#2b2b2b"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/input1_txt3" />

    <TextView
        android:id="@+id/input1_txt5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#e60033"
        android:textSize="25dp"
        android:layout_marginTop="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/input1_txt4" />

    <ImageButton
        android:id="@+id/input1_btn1"
        app:srcCompat="@drawable/next_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#A0D8EF"
        android:layout_marginTop="75dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/input1_txt5" />

</androidx.constraintlayout.widget.ConstraintLayout>