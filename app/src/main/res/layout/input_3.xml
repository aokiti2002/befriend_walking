<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A0D8EF" >

    <ImageView
        android:id="@+id/logo_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo_2" />

    <TextView
        android:id="@+id/input3_txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="趣味を選択してください"
        android:textColor="#2b2b2b"
        android:textSize="20dp"
        android:layout_marginTop="75dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo_2" />

    <LinearLayout
        android:id="@+id/input3_btn1"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/input3_txt1" >
        <Button
            android:id="@+id/input3_btn1_1"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/input_button"
            android:text="読む系"
            android:textSize="25dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp" />
        <Button
            android:id="@+id/input3_btn1_2"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/input_button"
            android:text="創作系"
            android:textSize="25dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/input3_btn2"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/input3_btn1" >
        <Button
            android:id="@+id/input3_btn2_1"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/input_button"
            android:text="運動系"
            android:textSize="25dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp" />
        <Button
            android:id="@+id/input3_btn2_2"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/input_button"
            android:text="鑑賞系"
            android:textSize="25dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/input3_btn3"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="75dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/input3_btn2" >
        <ImageButton
            android:id="@+id/input3_btn3_1"
            app:srcCompat="@drawable/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#A0D8EF"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp" />
        <ImageButton
            android:id="@+id/input3_btn3_2"
            app:srcCompat="@drawable/next_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#A0D8EF"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>